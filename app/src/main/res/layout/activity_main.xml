<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.evangel.pedometer.activity.MainActivity">

	<RelativeLayout
		android:id="@+id/rl_home"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true">

		<TextView
			android:id="@+id/tv_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="40dp"
			android:layout_marginTop="10dp"
			android:drawableLeft="@mipmap/home_statistical"
			android:drawablePadding="10dp"
			android:gravity="center_vertical"
			android:text="查看历史步数"
			android:textColor="#333333" />

		<com.evangel.pedometer.view.StepArcView
			android:id="@+id/cc"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:layout_below="@+id/tv_data"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp" />

		<TextView
			android:id="@+id/tv_set"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/cc"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginLeft="40dp"
			android:layout_marginStart="40dp"
			android:drawableLeft="@mipmap/home_question_mark"
			android:drawablePadding="10dp"
			android:gravity="center_vertical"
			android:text="设置锻炼计划"
			android:textColor="#333333" />

		<!--<TextView-->
		<!--android:id="@+id/tv_isSupport"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_below="@+id/cc"-->
		<!--android:layout_centerHorizontal="true"-->
		<!--android:layout_marginTop="10dp"-->
		<!--android:text="该设备支持计步"-->
		<!--android:textColor="#333333" />-->

		<Button
			android:id="@+id/stepArrayButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/cc"
			android:onClick="onClick"
			android:text="所有步数" />

		<Button
			android:id="@+id/stepArrayButton1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/stepArrayButton"
			android:onClick="onClick"
			android:text="根据时间获取步数" />

		<Button
			android:id="@+id/stepArrayButton2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/stepArrayButton1"
			android:onClick="onClick"
			android:text="根据时间和天数获取步数" />

		<TextView
			android:id="@+id/stepTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/stepArrayButton2"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:text="Hello World!"
			android:textSize="20sp" />

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/stepTextView"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:fillViewport="true">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/stepArrayTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:text="Hello World!"
					android:textSize="15sp" />
			</LinearLayout>
		</ScrollView>
	</RelativeLayout>

</RelativeLayout>
