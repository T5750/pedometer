<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.evangel.pedometer.activity.MainActivity">

	<RelativeLayout
		android:id="@+id/rl_home"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true">

		<TextView
			android:id="@+id/tv_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginRight="20dp"
			android:layout_marginTop="20dp"
			android:drawableLeft="@mipmap/home_statistical"
			android:drawablePadding="5dp"
			android:gravity="center_vertical"
			android:text="查看历史步数"
			android:textColor="@color/black_two"
			android:textSize="16sp" />

		<com.evangel.pedometer.view.StepArcView
			android:id="@+id/sav_step"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:layout_below="@+id/tv_data"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp" />

		<TextView
			android:id="@+id/tv_set"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/sav_step"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginLeft="20dp"
			android:layout_marginStart="20dp"
			android:drawableLeft="@mipmap/home_question_mark"
			android:drawablePadding="5dp"
			android:gravity="center_vertical"
			android:text="设置锻炼计划"
			android:textColor="@color/black_two"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/tv_step"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_data"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="80dp"
			android:textColor="@color/black_two"
			android:textSize="45sp" />
		<!--<TextView-->
		<!--android:id="@+id/tv_isSupport"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_below="@+id/cc"-->
		<!--android:layout_centerHorizontal="true"-->
		<!--android:layout_marginTop="10dp"-->
		<!--android:text="该设备支持计步"-->
		<!--android:textColor="@color/black_two" />-->

		<TextView
			android:id="@+id/tv_km"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/sav_step"
			android:layout_marginLeft="30dp"
			android:gravity="center_vertical"
			android:textColor="@color/black_two"
			android:textSize="25sp" />

		<TextView
			android:id="@+id/tv_calorie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/sav_step"
			android:layout_marginRight="30dp"
			android:gravity="center_vertical"
			android:textColor="@color/black_two"
			android:textSize="25sp" />

		<TextView
			android:id="@+id/tv_km_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@+id/tv_calorie"
			android:layout_marginLeft="30dp"
			android:gravity="center_vertical"
			android:text="里程/公里"
			android:textColor="@color/grey"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/tv_calorie_unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/tv_calorie"
			android:layout_marginRight="30dp"
			android:gravity="center_vertical"
			android:text="消耗/千卡"
			android:textColor="@color/grey"
			android:textSize="16sp" />

		<TextView
			android:id="@+id/stepArrayView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_calorie_unit"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:drawableLeft="@mipmap/home_walk"
			android:drawablePadding="5dp"
			android:text="今日步数 json"
			android:textColor="@color/black_two"
			android:textSize="16sp" />

		<!--<Button-->
		<!--android:id="@+id/stepArrayButton"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_below="@+id/stepArrayView"-->
		<!--android:layout_marginTop="10dp"-->
		<!--android:drawableLeft="@mipmap/home_walk"-->
		<!--android:drawablePadding="10dp"-->
		<!--android:onClick="onClick"-->
		<!--android:text="所有步数" />-->

		<!--<Button-->
		<!--android:id="@+id/stepArrayButton1"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_below="@+id/stepArrayButton"-->
		<!--android:onClick="onClick"-->
		<!--android:text="根据时间获取步数" />-->

		<!--<Button-->
		<!--android:id="@+id/stepArrayButton2"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_below="@+id/stepArrayButton1"-->
		<!--android:onClick="onClick"-->
		<!--android:text="根据时间和天数获取步数" />-->

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/stepArrayView"
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="10dp"
			android:fillViewport="true">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/stepArrayTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:text="Hello World!"
					android:textSize="16sp" />
			</LinearLayout>
		</ScrollView>
	</RelativeLayout>

</RelativeLayout>
